{% extends 'base.html.twig' %}

{% block title %}Contact index
{% endblock %}

{% block body %}
	{% block stylesheets %}
		{{ encore_entry_link_tags('crud') }}
	{% endblock %}
	<h1>Contact index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Email</th>
				<th>Tel</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for contact in contacts %}
				<tr>
					<td>{{ contact.id }}</td>
					<td>{{ contact.email }}</td>
					<td>{{ contact.tel }}</td>
					<td>
						<a href="{{ path('app_contact_show', {'id': contact.id}) }}">show</a>
						<a href="{{ path('app_contact_edit', {'id': contact.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
		<br />

	<a href="{{ path('app_contact_new') }}">Create new</a>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}School index
{% endblock %}

{% block body %}
	{% block stylesheets %}
		{{ encore_entry_link_tags('crud') }}
	{% endblock %}
	<h1>School index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Category</th>
				<th>Debut</th>
				<th>Fin</th>
				<th>Description</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for school in schools %}
				<tr>
					<td>{{ school.id }}</td>
					<td>{{ school.name }}</td>
					<td>{{ school.category }}</td>
					<td>{{ school.debut }}</td>
					<td>{{ school.fin }}</td>
					<td>{{ school.description }}</td>
					<td>
						<a href="{{ path('app_school_show', {'id': school.id}) }}">show</a>
						<a href="{{ path('app_school_edit', {'id': school.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_school_new') }}">Create new</a>
{% endblock %}
